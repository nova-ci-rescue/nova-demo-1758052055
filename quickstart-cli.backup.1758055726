        fi
    else
        echo "Skipping repository creation; using existing remote."
    fi

    # Set variables for later use
    GITHUB_USER="$OWNER"
    export DEMO_MODE GITHUB_USER REPO_NAME
    if [ -z "$REPO_FULL_NAME" ] && [ -n "$GITHUB_USER" ] && [ -n "$REPO_NAME" ]; then
