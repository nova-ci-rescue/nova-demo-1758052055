            "${INSTALL_ARGS[@]}" \
            --quiet >/dev/null 2>&1
        INSTALL_STATUS=$?
        set -e

        if [ ${INSTALL_STATUS} -eq 0 ]; then
            INSTALL_SUCCESS=1
            echo "‚úì Installed from PyPI"
        else
