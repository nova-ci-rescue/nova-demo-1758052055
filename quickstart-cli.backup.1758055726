            BRANCH_NAME="demo/nova-fix-$(date +%s)"
            git checkout -b "$BRANCH_NAME" 2>/dev/null || git switch -c "$BRANCH_NAME"
            local repo_view="$(gh repo view --json nameWithOwner --jq .nameWithOwner 2>/dev/null || echo "")"
            if [ -n "$repo_view" ]; then
                REPO_FULL_NAME="$repo_view"
