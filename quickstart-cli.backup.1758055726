  fi
  # Prompt only if still missing
  if [ -z "${CLOUDSMITH_ENTITLEMENT:-}" ]; then
    if [ -e /dev/tty ]; then
      printf "%s" "Enter your entitlement token: " > /dev/tty 2>/dev/null || true
