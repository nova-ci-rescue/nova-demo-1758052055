      export CLOUDSMITH_ENTITLEMENT="$CLOUDSMITH_TOKEN"
    elif [ -n "${OPENAI_ENTITLEMENT_TOKEN:-}" ]; then
      export CLOUDSMITH_ENTITLEMENT="$OPENAI_ENTITLEMENT_TOKEN"
