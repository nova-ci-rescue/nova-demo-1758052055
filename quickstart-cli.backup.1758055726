            echo "  CLOUDSMITH_TOKEN=xxxxx OPENAI_API_KEY=yyyy $0 --local"
            return 2
        fi
    fi

    # Fast HEAD/probe using Python urllib (capture status/reason for better messaging)
    PROBE_OUTPUT=$(python3 - "$CLOUDSMITH_TOKEN" <<'PY'
